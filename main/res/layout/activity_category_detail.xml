<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B4332"
    android:fillViewport="true"
    android:clipToPadding="false"
    android:paddingBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="32dp">

        <!-- Header with Logo and Menu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Logo placeholder -->
            <FrameLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/logo">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="SMART\nSPEND"
                    android:textColor="#40E0D0"
                    android:textSize="8sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Menu icon -->
            <LinearLayout
                android:id="@+id/menuIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="12dp"
                android:contentDescription="Open menu"
                android:background="?android:attr/selectableItemBackgroundBorderless">

                <View
                    android:layout_width="24dp"
                    android:layout_height="3dp"
                    android:background="@android:color/white"
                    android:layout_marginBottom="4dp" />
                <View
                    android:layout_width="24dp"
                    android:layout_height="3dp"
                    android:background="@android:color/white"
                    android:layout_marginBottom="4dp" />
                <View
                    android:layout_width="24dp"
                    android:layout_height="3dp"
                    android:background="@android:color/white" />
            </LinearLayout>

        </LinearLayout>

        <!-- Category Title -->
        <TextView
            android:id="@+id/categoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:text="WATER and LIGHTS"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Chart Section -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp">

            <!-- Chart Background -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#2D5A41" />

            <!-- Chart Container -->
            <LinearLayout
                android:id="@+id/chartContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Legend -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:layout_gravity="end">

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="#00FF7F"
                        android:layout_marginEnd="4dp"
                        android:layout_gravity="center_vertical" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GOAL"
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        android:layout_marginEnd="16dp" />

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="#32CD32"
                        android:layout_marginEnd="4dp"
                        android:layout_gravity="center_vertical" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BUDGET"
                        android:textColor="@android:color/white"
                        android:textSize="10sp" />
                </LinearLayout>

                <!-- Chart Area -->
                <FrameLayout
                    android:id="@+id/chartArea"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <!-- Y-axis labels -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="bottom">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="3000"
                            android:textColor="@android:color/white"
                            android:textSize="9sp"
                            android:gravity="bottom" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="2500"
                            android:textColor="@android:color/white"
                            android:textSize="9sp"
                            android:gravity="bottom" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="2000"
                            android:textColor="@android:color/white"
                            android:textSize="9sp"
                            android:gravity="bottom" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="1500"
                            android:textColor="@android:color/white"
                            android:textSize="9sp"
                            android:gravity="bottom" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="1000"
                            android:textColor="@android:color/white"
                            android:textSize="9sp"
                            android:gravity="bottom" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="500"
                            android:textColor="@android:color/white"
                            android:textSize="9sp"
                            android:gravity="bottom" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@android:color/white"
                            android:textSize="9sp" />
                    </LinearLayout>

                    <!-- Chart Lines Placeholder -->
                    <View
                        android:id="@+id/chartPlaceholder"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="35dp"
                        android:layout_marginBottom="15dp" />

                </FrameLayout>

                <!-- X-axis labels -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="35dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="JAN"
                        android:textColor="@android:color/white"
                        android:textSize="9sp"
                        android:gravity="center" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="FEB"
                        android:textColor="@android:color/white"
                        android:textSize="9sp"
                        android:gravity="center" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="MAR"
                        android:textColor="@android:color/white"
                        android:textSize="9sp"
                        android:gravity="center" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="APR"
                        android:textColor="@android:color/white"
                        android:textSize="9sp"
                        android:gravity="center" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="MAY"
                        android:textColor="@android:color/white"
                        android:textSize="9sp"
                        android:gravity="center" />
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

        <!-- Transactions List -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="12dp">

            <!-- Transaction 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:background="@drawable/transaction_background"
                android:layout_marginBottom="6dp"
                android:padding="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="28.01.25"
                    android:textColor="@android:color/black"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="LIGHTS"
                    android:textColor="@android:color/black"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="R 1500.00"
                    android:textColor="@android:color/black"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:gravity="end" />

            </LinearLayout>

            <!-- Transaction 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:background="@drawable/transaction_background"
                android:layout_marginBottom="6dp"
                android:padding="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="30.01.25"
                    android:textColor="@android:color/black"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="WATER"
                    android:textColor="@android:color/black"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="R 2500.00"
                    android:textColor="@android:color/black"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:gravity="end" />

            </LinearLayout>

            <!-- Transaction 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:background="@drawable/transaction_background"
                android:layout_marginBottom="6dp"
                android:padding="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="28.02.25"
                    android:textColor="@android:color/black"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="LIGHTS"
                    android:textColor="@android:color/black"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="R 1500.00"
                    android:textColor="@android:color/black"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:gravity="end" />

            </LinearLayout>

        </LinearLayout>

        <!-- Total Section -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/totalAmount"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/total_background"
                android:text="TOTAL:        R 5500.00"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingHorizontal="24dp" />

        </FrameLayout>

        <!-- Add Transaction Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAddTransaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_add"
            android:backgroundTint="#40E0D0"
            android:contentDescription="Add Transaction" />

    </LinearLayout>

</ScrollView>